{
  "identifier": "com.example.jsonformatter",
  "productName": "JSON 格式化工具",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "JSON 格式化工具",
        "width": 800,
        "height": 800,
        "visible": true,
        "decorations": false,
        "resizable": true,
        "acceptFirstMouse": true,
        "center": true,
        "minWidth": 600,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/*"
    ],
    "category": "DeveloperTool",
    "shortDescription": "JSON格式化工具",
    "longDescription": "一个简单易用的JSON格式化工具，支持JSON验证、格式化和美化显示。"
  },
  
  "plugins": {
    "updater": {
      "active": false,
      "pubkey": "<YOUR_UPDATER_PUBLIC_KEY>",
      "endpoints": [
        "https://example.com/updates/{{target}}-{{arch}}/{{current_version}}"
      ]
    }
  }
}