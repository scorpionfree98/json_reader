{
  "identifier": "com.example.jsonformatter",
  "productName": "JSONFormatter",
  "version": "0.0.0-1234",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "JSON 格式化工具",
        "width": 800,
        "height": 800,
        "visible": true,
        "decorations": false,
        "resizable": true,
        "acceptFirstMouse": true,
        "center": true,
        "minWidth": 600,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/*"
    ],
    "category": "DeveloperTool",
    "shortDescription": "JSON格式化工具",
    "longDescription": "一个简单易用的JSON格式化工具，支持JSON验证、格式化和美化显示。",
    "windows": {
      "allowDowngrades": true,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE1QjA2Q0E0NUFCOUI3QzcKUldUSHQ3bGFwR3l3RlkwSnBMdk1kN2tlek5SOWhCOU90bHFSVEdEK2Y0T1BXL08xSHhleEtKckEK",
      "endpoints": [
        "https://github.com/scorpionfree98/json_reader/releases/latest/download/latest-update.json"
      ]
    }
  }
}